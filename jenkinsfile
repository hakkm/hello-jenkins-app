pipeline {
    agent { docker { image 'python:3.13.2-alpine3.21' } }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                echo "Building Stage"
                cd app
                python -m venv venv
                pip install --no-cache-dir --upgrade pip
                source venv/bin/activate  
                pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                echo "Testing Stage"
                cd app
                source venv/bin/activate  
                python3 hello.py
                python3 hello.py success_arg
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
